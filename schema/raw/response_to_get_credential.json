{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CredentialResponse",
  "type": "object",
  "required": [
    "commitment",
    "credential_type",
    "expires_at",
    "holder",
    "id",
    "issued_at",
    "issuer",
    "revoked"
  ],
  "properties": {
    "commitment": {
      "type": "string"
    },
    "credential_type": {
      "$ref": "#/definitions/CredentialType"
    },
    "expires_at": {
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "holder": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "issued_at": {
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    },
    "issuer": {
      "type": "string"
    },
    "revoked": {
      "type": "boolean"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "CredentialType": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "citizenship",
            "residency",
            "age_over18",
            "healthcare_eligibility"
          ]
        },
        {
          "type": "object",
          "required": [
            "custom"
          ],
          "properties": {
            "custom": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      ]
    }
  }
}
