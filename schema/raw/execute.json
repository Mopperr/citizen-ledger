{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExecuteMsg",
  "oneOf": [
    {
      "description": "Stake tokens",
      "type": "object",
      "required": [
        "stake"
      ],
      "properties": {
        "stake": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Unstake tokens",
      "type": "object",
      "required": [
        "unstake"
      ],
      "properties": {
        "unstake": {
          "type": "object",
          "required": [
            "amount"
          ],
          "properties": {
            "amount": {
              "$ref": "#/definitions/Uint128"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Claim pending staking rewards",
      "type": "object",
      "required": [
        "claim_rewards"
      ],
      "properties": {
        "claim_rewards": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Distribute block emissions (called by chain or keeper)",
      "type": "object",
      "required": [
        "distribute_emissions"
      ],
      "properties": {
        "distribute_emissions": {
          "type": "object",
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Update emission schedule (admin only, governance in future)",
      "type": "object",
      "required": [
        "update_phases"
      ],
      "properties": {
        "update_phases": {
          "type": "object",
          "required": [
            "phases"
          ],
          "properties": {
            "phases": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/EmissionPhase"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Slash a staker's stake (admin/governance only)",
      "type": "object",
      "required": [
        "slash"
      ],
      "properties": {
        "slash": {
          "type": "object",
          "required": [
            "reason",
            "staker"
          ],
          "properties": {
            "reason": {
              "type": "string"
            },
            "staker": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Update slash penalty rate (admin only)",
      "type": "object",
      "required": [
        "update_slash_penalty"
      ],
      "properties": {
        "update_slash_penalty": {
          "type": "object",
          "required": [
            "slash_penalty_bps"
          ],
          "properties": {
            "slash_penalty_bps": {
              "type": "integer",
              "format": "uint64",
              "minimum": 0.0
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  ],
  "definitions": {
    "EmissionPhase": {
      "description": "An emission phase: defines how many tokens are emitted per block during a range of blocks",
      "type": "object",
      "required": [
        "end_block",
        "label",
        "start_block",
        "tokens_per_block"
      ],
      "properties": {
        "end_block": {
          "description": "End block height (inclusive, 0 = infinity)",
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "label": {
          "description": "Label (e.g., \"Year 1\", \"Year 2-3\")",
          "type": "string"
        },
        "start_block": {
          "description": "Start block height (inclusive)",
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "tokens_per_block": {
          "description": "Tokens emitted per block in this phase",
          "allOf": [
            {
              "$ref": "#/definitions/Uint128"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "Uint128": {
      "description": "A thin wrapper around u128 that is using strings for JSON encoding/decoding, such that the full u128 range can be used for clients that convert JSON numbers to floats, like JavaScript and jq.\n\n# Examples\n\nUse `from` to create instances of this and `u128` to get the value out:\n\n``` # use cosmwasm_std::Uint128; let a = Uint128::from(123u128); assert_eq!(a.u128(), 123);\n\nlet b = Uint128::from(42u64); assert_eq!(b.u128(), 42);\n\nlet c = Uint128::from(70u32); assert_eq!(c.u128(), 70); ```",
      "type": "string"
    }
  }
}
